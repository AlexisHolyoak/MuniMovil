<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="muni" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="editTextStyle">@style/editTv</item>
        <item name="android:editTextStyle">@style/editTv</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/btn</item>
        <item name="buttonStyle">@style/btn</item>
        <item name="android:textViewStyle">@style/muni.textview</item>
    </style>
    <style name="muni.textview" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="muni.NoActionBar" parent="muni">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="editTv" parent="@android:style/Widget.EditText">
        <item name="android:background">
            @drawable/edit_text_rounded_corners
        </item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="btn" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="splashtitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="titles" parent="@android:style/Widget.TextView">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txtStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/textview_answer</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="muni.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="muni.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="muni.textviewsanswer" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/textview_answer</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="muni.txtspecial" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">bottom|left</item>

        <item name="android:textColor">@color/blue700</item>
    </style>
<style name="muni.spinner" parent="@android:style/Widget.Spinner">
    <item name="android:background">@drawable/spinner_style</item>
    <item name="android:layout_height">40dp</item>
</style>

    <style name="muni.operacionvehiculo.txtRazon" parent="@android:style/Widget.TextView">
        <item name="android:textStyle"> bold</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textColor">@color/blue700</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>

    </style>
    <style name="muni.operacionvehiculo.txtAnswer" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/textview_answer</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="muni.forms.txtrazon" parent="@android:style/Widget.TextView">
        <item name="android:textStyle"> bold</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textColor">@color/blue700</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="muni.ctacterazontv" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/blue700</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>
    <style name="muni.forms.txtAnswer" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/textview_answer</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
