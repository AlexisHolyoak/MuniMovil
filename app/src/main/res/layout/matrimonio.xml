<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/matrimonioCard">

    <LinearLayout
        android:orientation="vertical"
        android:background="?selectableItemBackground"
        android:paddingTop="@dimen/card_padding_vertical"
        android:paddingBottom="@dimen/card_padding_vertical_large"
        android:paddingLeft="@dimen/card_padding_lateral"
        android:paddingRight="@dimen/card_padding_lateral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Esposa:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView62"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nombre_esposo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Esposo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView68"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nombre_esposa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/card_padding_vertical" />
    </LinearLayout>
</android.support.v7.widget.CardView>